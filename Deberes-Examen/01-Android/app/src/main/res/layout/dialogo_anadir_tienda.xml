<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFDEE6"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Añadir Tienda"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/anadir_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Nombre de la tienda"
        android:inputType="text" />

    <EditText
        android:id="@+id/anadir_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Dueño"
        android:inputType="text" />

    <EditText
        android:id="@+id/anadir_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Ubicación"
        android:inputType="text" />

    <EditText
        android:id="@+id/anadir_coordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Coordenadas"
        android:inputType="text" />


</LinearLayout>
